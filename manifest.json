{
    "manifest_version": 2,
    
    "name": "TeeSpaceX",
    "description": "TeeSpaceX",
    "version": "1.0",
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
		"webRequest",
        "*://tmax.teespace.net/",
        "storage"
    ],

	"background": {
	    "scripts": ["background.js" ]
    },
    
    "content_scripts": [{
    	"matches" : [ "*://tmax.teespace.net/*" ],
    	"all_frames": true,
    	"js" : [ "injected.js", "jquery-3.4.1.js" ]
	}]
}
